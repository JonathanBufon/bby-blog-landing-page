<div class="bg-slate-900 border border-slate-700 rounded-xl p-8 hover:border-indigo-500 transition-all duration-300 group shadow-lg {{ status == 'development' ? 'opacity-75 hover:opacity-100' : '' }}">
    <div class="flex justify-between items-start mb-4">
        <h4 class="text-2xl font-bold text-white {{ status == 'available' ? 'group-hover:text-indigo-400 transition-colors' : '' }}">{{ title }}</h4>
        {% if status == 'available' %}
            <span class="bg-green-500/10 text-green-400 text-xs font-bold px-2 py-1 rounded border border-green-500/20">DISPON√çVEL</span>
        {% else %}
            <span class="bg-yellow-500/10 text-yellow-400 text-xs font-bold px-2 py-1 rounded border border-yellow-500/20">EM DESENVOLVIMENTO</span>
        {% endif %}
    </div>
    <p class="text-slate-400 mb-6 h-20">{{ description }}</p>
    
    {% if status == 'available' and url %}
        <a href="{{ url }}" target="_blank" rel="noopener noreferrer" class="inline-flex items-center justify-center w-full py-3 px-4 bg-indigo-600 hover:bg-indigo-700 text-white font-medium rounded-lg transition-colors">
            Acessar {{ title }}
            <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path></svg>
        </a>
    {% else %}
        <button disabled class="inline-flex items-center justify-center w-full py-3 px-4 bg-slate-800 text-slate-500 font-medium rounded-lg cursor-not-allowed">
            Em breve
        </button>
    {% endif %}
</div>
